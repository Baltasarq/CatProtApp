<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CatProtApp.View.MainWindow"
        Title="App for Cats Protection"
        Padding="10" Width="400" Height="350" MinWidth="400" MinHeight="350">
    <StackPanel>
        <!-- Edit the name. -->
        <DockPanel Margin="10">
            <Label Padding="10" DockPanel.Dock="Left">Name</Label>
            <TextBox Padding="10" Name="EdName"></TextBox>
        </DockPanel>

        <!-- Edit race. -->
        <DockPanel Margin="10">
            <Label Padding="10" DockPanel.Dock="Left">Race</Label>
            <ComboBox Padding="10" SelectedIndex="0" Name="EdRace" />
        </DockPanel>

        <!-- Edit birth date. -->
        <DockPanel Margin="10">
            <Label Padding="10" DockPanel.Dock="Left">Birth date</Label>
            <DatePicker Padding="10" Name="EdBirthDate" />
        </DockPanel>

        <!-- The button panel. -->
        <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Padding="10" Name="BtNew">New</Button>
            <Button Padding="10" Name="BtPrev">&lt;&lt;</Button>
            <Button Padding="10" Name="BtNext">&gt;&gt;</Button>
        </StackPanel>

        <!-- Label for status. -->
        <Label Margin="10" Name="LblStatus" HorizontalAlignment="Right" />
    </StackPanel>
</Window>
